<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/optionCardHolder">

    <android.support.v7.widget.CardView android:id="@+id/optionCard"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <RelativeLayout android:id="@+id/optionCardGuts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

                <TextView android:id="@+id/optionCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/OptionTitle"
                    android:text="Sample Text"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>